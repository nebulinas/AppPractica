<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#6A9181"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/cardview_light_background"
        android:padding="16dp">

        <!-- ✅ NUEVO: Tipo (COMPUTADORA/UTILITARIO) -->
        <TextView
            android:id="@+id/tv_card_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: COMPUTADORA"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_card_equipo_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Equipo"
            android:textColorHighlight="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_card_activo_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo: 12345"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_card_agencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agencia: Central"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_card_encargado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encargado: Juan Pérez"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_card_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP: 192.168.1.100"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_card_ram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño Memoria RAM: 8 GB"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_card_windows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión Windows: 10 PRO"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_card_antivirus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión del antivirus: Eset 12.0"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_card_fecha_cambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha cambio:"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:id="@+id/separatorUtilitarios" />


        <!-- ✅ CAMPOS ESPECÍFICOS PARA UTILITARIOS (inicialmente ocultos) -->

        <!-- Marca (Utilitarios) -->
        <TextView
            android:id="@+id/tv_card_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca: HP"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Modelo (Utilitarios) -->
        <TextView
            android:id="@+id/tv_card_modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo: LaserJet Pro"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Serie (Utilitarios) -->
        <TextView
            android:id="@+id/tv_card_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serie: SN123456"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp"
            android:visibility="gone" />



        <!-- Estado (Utilitarios) -->
        <TextView
            android:id="@+id/tv_card_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Activo"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Fecha Adquisición (Utilitarios) -->
        <TextView
            android:id="@+id/tv_card_fecha_adquisicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Adquisición: 2023-12-01"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_card_fecha_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Registro: 2023-12-01"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:layout_marginTop="4dp"
            android:visibility="gone" />


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>