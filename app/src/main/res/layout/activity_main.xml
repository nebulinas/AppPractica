<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="CONTROL DE ACTIVOS"
        app:titleCentered="true"
        android:backgroundTint="#3F51B5"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Informacion Técnica de Mantenimiento y Activos"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="?android:attr/textColorPrimary"
        android:fontFamily="@font/monserrat"
        android:textStyle="bold"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_activos_computadoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/activos_computadoras"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Menú Computadoras"
                    android:src="@drawable/computadora1" />

                <TextView
                    android:id="@+id/textView_computadoras"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="9dp"
                    android:text="Computadoras"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_activos_utilitarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/activos_camaras"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/camara"
                    android:contentDescription="Menú utilitarios"/>

                <TextView
                    android:id="@+id/textView_camaras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Utilitarios"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textAlignment="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_historial_mantenimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/historial_mantenimiento"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/historial3"
                    android:contentDescription="Historial de Mantenimiento"/>

                <TextView
                    android:id="@+id/textView_historial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Historial"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textAlignment="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>
