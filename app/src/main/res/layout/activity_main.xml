<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3F51B5"
        android:text="TextView"
        android:textColor="#3F51B5" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="Informacion Tecnica de Mantenimiento y Activos"
        android:textAlignment="center"
        android:textColor="#000000"
        android:fontFamily="@font/monserrat"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="76dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/activos_computadoras"
            android:layout_width="92dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:background="@drawable/computadora1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computadoras"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageView
            android:id="@+id/activos_camaras"
            android:layout_width="92dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:background="@drawable/camara" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camaras"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageView
            android:id="@+id/historial_mantenimiento"
            android:layout_width="92dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:background="@drawable/historial3"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:textAlignment="center"/>
    </RadioGroup>

</LinearLayout>